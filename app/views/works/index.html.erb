

<div class="albums">
  <h2>Top Albums</h2>
  <% @works.where(category: 'album').each do |work|%>
    <p><strong>Title:</strong> <%= link_to work.title, work_path(work.id)%>, <strong>Category:</strong> <%=work.category%></p>
  <%end%>
</div>



